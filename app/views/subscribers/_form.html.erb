=begin%>
 <div class="container mt-3 ms-3"></div>
    <div class="sr-root">
      <div class="sr-main shadow rounded-3">
        <h1 class="bg-dark shadow rounded-3">Choose a Subscription plan</h1>
        <div class="price-table-container p-2">
          <section>
              <input type="hidden" id="basicPrice" name="priceId">
