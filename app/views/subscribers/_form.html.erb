                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-description="A month's Subscription"
                   data-amount="2000"></script>
                   <% end %>
              </div>
          </section>
          <section>
              <input type="hidden" id="proPrice" name="priceId">
              <img
                src="/assets/starter.png"
                width="120"
                height="120"
                />
              <div class="name">Silver</div>
              <div class="price">$30</div>
              <div class="duration">per Month</div>
              <div class="shadow rounded-3 mt-2">
              <%= form_tag subscription_path(3), method: :put do %>
                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-description="A month's Subscription"
                   data-amount="3000">
                </script>
                <% end %>
              </div>
          </section>
          <section>
              <input type="hidden" id="proPrice" name="priceId">
              <img
                src="/assets/professional.png"
                width="120"
                height="120"
                />
              <div class="name">Gold</div>
              <div class="price">$40</div>
              <div class="duration">per Month</div>
              <div class="shadow rounded-3 mt-2">
              <%= form_tag subscription_path(3), method: :put do %>
                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button bg-dark"
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-description="A month's Subscription"
                   data-amount="4000">
                </script>
                <% end %>
                </div>      
          </section>
        </div>
      </div>
    </div>

   
